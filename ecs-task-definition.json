{
  "family": "nominatim-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "4096",
  "memory": "8192",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/nominatim-task-role",
  "containerDefinitions": [
    {
      "name": "nominatim",
      "image": "YOUR_ECR_REPOSITORY/nominatim-production:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PROJECT_DIR",
          "value": "/nominatim"
        },
        {
          "name": "EFS_DIR",
          "value": "/efs"
        },
        {
          "name": "THREADS",
          "value": "4"
        },
        {
          "name": "OSM2PGSQL_CACHE",
          "value": "4000"
        },
        {
          "name": "NOMINATIM_API_POOL_SIZE",
          "value": "8"
        },
        {
          "name": "NOMINATIM_QUERY_TIMEOUT",
          "value": "60"
        },
        {
          "name": "NOMINATIM_REQUEST_TIMEOUT",
          "value": "60"
        },
        {
          "name": "IMPORT_STYLE",
          "value": "full"
        },
        {
          "name": "REVERSE_ONLY",
          "value": "false"
        },
        {
          "name": "KEEP_PBF",
          "value": "true"
        },
        {
          "name": "PGHOST",
          "value": "YOUR_RDS_ENDPOINT"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        },
        {
          "name": "PGDATABASE",
          "value": "nominatim"
        },
        {
          "name": "PGUSER",
          "value": "nominatim"
        },
        {
          "name": "PBF_URL",
          "value": "https://download.geofabrik.de/europe/france-latest.osm.pbf"
        },
        {
          "name": "REPLICATION_URL",
          "value": "https://download.geofabrik.de/europe/france-updates/"
        }
      ],
      "secrets": [
        {
          "name": "PGPASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:nominatim/db-password"
        },
        {
          "name": "NOMINATIM_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:nominatim/app-password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "efs-storage",
          "containerPath": "/efs",
          "readOnly": false
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/status || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 300
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nominatim-production",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "efs-storage",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-YOUR_EFS_ID",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-YOUR_ACCESS_POINT_ID",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "nominatim"
    }
  ]
}